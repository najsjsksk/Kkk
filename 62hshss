-- // T·∫£i th∆∞ vi·ªán Fluent
local Fluent = loadstring(game:HttpGet("https://github.com/dawid-scripts/Fluent/releases/latest/download/main.lua"))()

-- // T·∫°o c·ª≠a s·ªï ch√≠nh
local Window = Fluent:CreateWindow({
    Title = "Renx Hub | Key System",
    SubTitle = "by _duyvel",
    TabWidth = 160,
    Size = UDim2.fromOffset(500, 350),
    Acrylic = true,
    Theme = "Dark",
    MinimizeKey = Enum.KeyCode.RightControl
})

-- // T·∫°o tab ch√≠nh
local Tab = Window:AddTab({ Title = "Key System", Icon = "key" })

-- // D·ªãch v·ª• c·∫ßn thi·∫øt
local HttpService = game:GetService("HttpService")
local RbxAnalyticsService = game:GetService("RbxAnalyticsService")

-- // L·∫•y HWID t·ª´ ClientId
local function getHWID()
    local success, result = pcall(function()
        return RbxAnalyticsService:GetClientId()
    end)
    return success and result or "unknown"
end
local KEY_API = "https://duyvel.testhubgetkey.site/checkkey" -- THAY LINK N√ÄY B·∫∞NG API C·ª¶A B·∫†N
local userKey = ""

-- // √î nh·∫≠p Key
Tab:AddInput("KeyInput", {
    Title = "üîë Nh·∫≠p Key",
    Placeholder = "Key",
    Callback = function(value)
        userKey = value
    end
})


-- // N√∫t CheckKey
Tab:AddButton({
    Title = "‚úÖ Check Key",
    Description = "Ki·ªÉm tra v√† g√°n key n·∫øu h·ª£p l·ªá.",
    Callback = function()
        if userKey == "" then
            ResultLabel:Set("‚ùó Vui l√≤ng nh·∫≠p key tr∆∞·ªõc.")
            return
        end

        ResultLabel:Set("üîÑ ƒêang ki·ªÉm tra...")

        local hwid = getHWID()
        local payload = HttpService:JSONEncode({ key = userKey, hwid = hwid })

        local success, response = pcall(function()
            return HttpService:PostAsync(KEY_API, payload, Enum.HttpContentType.ApplicationJson)
        end)

        if success then
            local result = HttpService:JSONDecode(response)
            if result.success then
                ResultLabel:Set("‚úÖ " .. result.message)
              loadstring(game:HttpGet("https://raw.githubusercontent.com/najsjsksk/Kkk/refs/heads/main/nah172gs.txt"))()
            else
                ResultLabel:Set("‚ùå " .. result.message)
            end
        else
            ResultLabel:Set("‚ùå l·ªói hay b√°o _duyvel")
        end
    end
})

Tab:AddButton({
    Title = "üåê L·∫•y Key",
    Description = "M·ªü tr√¨nh duy·ªát ƒë·ªÉ l·∫•y key",
    Callback = function()
        setclipboard("https://duyvel.testhubgetkey.site/")
        Fluent:Notify({
            Title = "ƒê√£ sao ch√©p link!",
            Content = "Vui l√≤ng d√°n v√†o tr√¨nh duy·ªát",
            SubContent = "https://duyvel.testhubgetkey.site/",
            Duration = 5
        })
    end
})
